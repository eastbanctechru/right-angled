// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
        "**/esm": true,
        "**/*.d.ts": {
            "when": "$(basename).ts"
        },
        "**/*.js.map": {
            "when": "$(basename)"
        },
        "**/*.js": {
            "when": "$(basename).ts"
        }
    },
    "search.exclude": {
        "**/docs": true,
        "**/esm": true,
        "**/coverage": true
    }
}